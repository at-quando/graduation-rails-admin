                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Name of product</th>
                      <th>Status</th>
                      <th>Shop</th>
                      <th>Receiver</th>
                      <th>Total</th>
                      <th>Info user</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @pending_orders.each do |order| %>
                      <tr>
                        <td scope="row"><%=order.id%></td>
                        <td> 
                          <% order.order_items.each do |item| %>
                            - (<%=item.quantity%>) <%=item.product.name %><br>
                          <% end %>
                        </td>
                        <td> 
                          <% order.order_items.each do |item| %>
                             <%=item.status %><br>
                          <% end %>
                        </td>
                        <td> 
                          <% order.order_items.each do |item| %>
                             <%=item.property.product.shop.name %><br>
                          <% end %>
                        </td>
                        <td>
                          <%=order.receiver%><br>
                          <%=order.address%><br>
                          <%=order.phone%><br>
                        </td>
                        <td> $ <%=order.order_items.map{ |x| x.total }.inject{|sum,x| sum=sum+x}%></td>
                        <td>
                          <%=order.receiver%><br>
                          <%=order.address%><br>
                          <%=order.phone%><br>
