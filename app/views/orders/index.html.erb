<div class="x_panel">
    <div class="x_title">
      <h2>All completed Orders of This Shop</h2>
      <ul class="nav navbar-right panel_toolbox">
        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="#">Settings 1</a>
            </li>
            <li><a href="#">Settings 2</a>
            </li>
          </ul>
        </li>
        <li><a class="close-link"><i class="fa fa-close"></i></a>
        </li>
      </ul>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th>products</th>
            <th>Receiver</th>
            <th>Total</th>
            <th>Info user</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
                <td scope="row"><%=order.id%></td>
                <td> 
                  <% order.order_items.each do |item| %>
                    - (<%=item.quantity%>) <%=item.product.name %><br>
                  <% end %>
                </td>
                <td scope="row">
                  <%=order.receiver%><br>
                  <%=order.address%><br>
                  <%=order.phone%>
                </td>
                <td> $ <%=order.order_items.map{ |x| x.total }.inject{|sum,x| sum=sum+x}%></td>
                <td scope="row">
                  <%=order.user.name%><br>
                  <%=order.user.address%><br>
                  <%=order.user.phone%>
                </td>
                <td><%=order.status%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <h5>Quantity of Uncompleted Orders: <%= @num_un_orders %> (<%= @num_un_orders*100/@num_orders %>%)</h5>
    <h5>Quantity of Orders: <%= @num_orders %> </h5>
    <h5>Quantity of Sold: <%= @num_product %> </h5>
    <h3>Total: $ <%= @sum %> </h3>
  </div>