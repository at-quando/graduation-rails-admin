<div class="x_panel">
    <div class="x_title">
      <h2>All completed Orders of This Shop</h2>
      <ul class="nav navbar-right panel_toolbox">
        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="#">Settings 1</a>
            </li>
            <li><a href="#">Settings 2</a>
            </li>
          </ul>
        </li>
        <li><a class="close-link"><i class="fa fa-close"></i></a>
        </li>
      </ul>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th>Name of product</th>
            <th>Total</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Info user</th>
            <th>Info receiver</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
        	<% @order_items.each do |item| %>
	          <tr>
	            <td scope="row"><%=item.id%></td>
	            <td><%=item.property.product.name%></td>
              
	            <td><%=item.total%></td>
              <td><%=item.quantity%></td>
              <td><%=item.property.price%></td>
              <td>
                <%=item.order.user.name%> <br>
                <%=item.order.user.address%><br>
                <%=item.order.user.phone%><br>
              </td>
              <td>
                <%=item.order.receiver%> <br>
                <%=item.order.address%><br>
                <%=item.order.phone%><br>
              </td>
              <td><%=item.order.status %></td>
	          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <h5>Quantity of Sold: <%= @quantity %> </h5>
    <h3>Total: $ <%= @sum %> </h3>
  </div>