<div class="col-md-6 col-xs-12">
	<div class="x_panel">
		<div class="x_title">
			<h2>Shop Information <small>your shop information</small></h2>
			<div class="clearfix"></div>
		</div>
		<div class="x_content">
	<!-- start form for validation -->
				<div id="demo-form" data-parsley-validate>
					<div class="form-group">
		  		<label for="fullname">Name Shop* :</label>
		  		<span for="fullname"><%=@shop.name%></span>
		  		</div>
		  		<div class="form-group">
		  		<label for="fullname">Address* :</label>
		  		<span for="fullname"><%=@shop.address%></span>
		  		</div>
		  		<div class="form-group">
		  		<label for="email">Type* :</label>
