$('#category_id').change(function() {
		var value =  $('#category_id').val();
		 $.ajax({
				url:'get_brand',
				type:'POST',
				dataType:'json',
				data:{
						valueCat: value
				},
				dataType: 'script',
				success:function(data){
					console.log(data);
				},
				error:function(data){
						debugger;
				}
		});
	});
</script>



